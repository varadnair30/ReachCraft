# ================================
# APP CONFIGURATION
# ================================
APP_NAME=ReachCraft
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# ================================
# SUPABASE (Database + Auth)
# ================================
# Get from: https://supabase.com/dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-public-key-here
SUPABASE_SERVICE_KEY=your-service-role-secret-key-here

# ================================
# UPSTASH REDIS (Cache + Queue)
# ================================
# Get from: https://console.upstash.com/
UPSTASH_REDIS_URL=redis://default:your-password@your-endpoint.upstash.io:6379

# ================================
# CELERY (Task Queue)
# ================================
CELERY_BROKER_URL=redis://default:your-password@your-endpoint.upstash.io:6379
CELERY_RESULT_BACKEND=redis://default:your-password@your-endpoint.upstash.io:6379

# ================================
# GEMINI AI (LLM)
# ================================
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-gemini-api-key-here

# ================================
# LANGFUSE (LLM Monitoring)
# ================================
# Get from: https://cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# ================================
# BROWSERLESS (Web Scraping)
# ================================
# Get from: https://www.browserless.io/
# Free tier: 5 hours/month
BROWSERLESS_API_KEY=your-browserless-api-key

# ================================
# BRIGHT DATA (Web Scraping Fallback)
# ================================
# Get from: https://brightdata.com/
# Free tier: 50 credits/month
BRIGHTDATA_API_KEY=your-brightdata-api-key

# ================================
# RESEND (Email Service - Primary)
# ================================
# Get from: https://resend.com/api-keys
# Free tier: 3,000 emails/month
RESEND_API_KEY=re_your-resend-api-key

# ================================
# SENDGRID (Email Service - Fallback)
# ================================
# Get from: https://app.sendgrid.com/settings/api_keys
# Free tier: 3,000 emails/month
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# ================================
# ZEROBOUNCE (Email Verification)
# ================================
# Get from: https://www.zerobounce.net/
# Free tier: 100 verifications/month
ZEROBOUNCE_API_KEY=your-zerobounce-api-key

# ================================
# SENTRY (Error Monitoring)
# ================================
# Get from: https://sentry.io/
# Free tier: 5,000 events/month
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ================================
# CORS (Frontend Origins)
# ================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","chrome-extension://*"]
